<?xml version="1.0" encoding="UTF-8"?>

<job-scheduling-data xmlns="http://quartznet.sourceforge.net/JobSchedulingData"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 				version="2.0">

    <processing-directives>
        <overwrite-existing-data>true</overwrite-existing-data>
    </processing-directives>

    <schedule>
        <trigger>
            <cron>
                <name>SpitOrderTigger</name>
                <group>SpitOrder</group>
                <description>every 2 seconds</description>
                <job-name>OPC-SpitOrderJob</job-name>
                <job-group>OrderProcess</job-group>
                <misfire-instruction>SmartPolicy</misfire-instruction>
                <cron-expression>0/59 * * * * ?</cron-expression>
            </cron>
        </trigger>
        <job>
            <name>OPC-SpitOrderJob</name>
            <group>OrderProcess</group>
            <description>every 3 seconds process the order</description>
            <job-type>Intime.OPC.Job.Trade.SplitOrder.SplitOrderJob, Intime.OPC.Job</job-type>
            <durable>true</durable>
            <recover>false</recover>
        </job>
    </schedule>

    <schedule>
        <trigger>
            <cron>
                <name>ProductSync</name>
                <group>ProductSync</group>
                <description>every 2 seconds</description>
                <job-name>ProductSyncJob</job-name>
                <job-group>ProductSync</job-group>
                <misfire-instruction>SmartPolicy</misfire-instruction>
                <cron-expression>0/10 * * * * ?</cron-expression>
            </cron>
        </trigger>
        <job>
            <name>ProductSyncJob</name>
            <group>ProductSync</group>
            <description>every 3 seconds process the order</description>
            <job-type>Intime.OPC.Job.Product.ProductSync.Supports.Intime.Jobs.AllSyncJob, Intime.OPC.Job</job-type>
            <durable>true</durable>
            <recover>false</recover>
        </job>
    </schedule>

    <schedule>
        <trigger>
            <cron>
                <name>ProductPicSync</name>
                <group>ProductPicSync</group>
                <description>every 2 seconds</description>
                <job-name>ProductPicSyncJob</job-name>
                <job-group>ProductPicSync</job-group>
                <misfire-instruction>SmartPolicy</misfire-instruction>
                <cron-expression>0/50 * * * * ?</cron-expression>
            </cron>
        </trigger>
        <job>
            <name>ProductPicSyncJob</name>
            <group>ProductPicSync</group>
            <description>every 3 seconds process the order</description>
            <job-type>Intime.OPC.Job.Product.ProductSync.Supports.Intime.Jobs.ProductPicSyncJob, Intime.OPC.Job</job-type>
            <durable>true</durable>
            <recover>false</recover>
        </job>
    </schedule>
  
</job-scheduling-data>