@model Yintai.Hangzhou.Cms.WebSiteV1.Models.CommentViewModel
@{
    ViewBag.Title = "评论详情";
}
@section PageBread
{
    <ul class="breadcrumb">
        <li>@Html.ActionLink2("用户管理", "Index", "Customer")<span class="divider">/</span></li>
        <li>@Html.ActionLink2("评论列表", "List")<span class="divider">/</span></li>
        <li class="active">@ViewBag.Title</li>
    </ul>
}
<h2>@ViewBag.Title</h2>

<fieldset>

    <div class="display-label">@Html.LabelFor(m => m.Content)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Content)
        
    </div>

    <div class="display-label">@Html.LabelFor(m => m.User_Id)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CommentUser.Nickname)
    </div>

    <div class="display-label">@Html.LabelFor(m => m.SourceId)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.SourceId)
    </div>

    <div class="display-label">@Html.LabelFor(m => m.SourceType)</div>
    <div class="display-field">
        @Html.Label("", ((Yintai.Hangzhou.Model.Enums.SourceType)Model.SourceType).ToFriendlyString())
    </div>


    <div class="display-label">@Html.LabelFor(m => m.ReplyId)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ReplyId)
    </div>

    <div class="display-label">@Html.LabelFor(m => m.Status)</div>
    <div class="display-field">
        @Html.Label("", ((Yintai.Hangzhou.Model.Enums.DataStatus)Model.Status).ToFriendlyString())
    </div>


    <div class="display-label">@Html.LabelFor(m => m.CreatedDate)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CreatedDate)
    </div>

    <p>
        @Html.ActionLink2("回复", "Create", new { commentId = Model.Id }, new { @class = "btn btn-primary" })
        @Html.ActionLink2("返回列表", "List", null, new { @class = "btn" })
    </p>
</fieldset>
