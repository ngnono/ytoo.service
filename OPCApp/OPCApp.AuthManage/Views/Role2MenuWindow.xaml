<UserControl x:Class="OPCApp.AuthManage.Views.Role2MenuWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Width="653.3" Height="460"
     >
    <Grid Margin="0,0,18,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid HorizontalAlignment="Left" AutoGenerateColumns="True" Grid.Column="0" Margin="10,0,0,-208" VerticalAlignment="Top" Width="235" Height="460">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="全选" Width="50" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="菜单名称" Width="80" Binding="{Binding ShopId}"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid HorizontalAlignment="Left" AutoGenerateColumns="True" VerticalAlignment="Top" Width="271" Height="460" Grid.Column="2" Margin="0,0,0,-207">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="全选" Width="50" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="角色名称" Width="80" Binding="{Binding ShopId}"/>
                <DataGridTextColumn Header="所属菜单名称" Width="80" Binding="{Binding ShopId}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="授权菜单到角色" Grid.Column="1"  Style="{StaticResource SquareButtonStyle}" HorizontalAlignment="Left" Margin="5,135,0,89" Width="97"/>
        <Button Content="取消角色授权" Grid.Column="1"  Style="{StaticResource SquareButtonStyle}" HorizontalAlignment="Left" Margin="5,214,0,0" VerticalAlignment="Top" Width="97" Height="32"/>
    </Grid>
</UserControl>
