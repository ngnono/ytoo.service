<controls:MetroWindow x:Class="OPCApp.AuthManage.Views.RoleAddWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="角色" Height="276" Width="520.138" WindowStartupLocation="CenterScreen"
                      ShowMinButton="False" ShowMaxRestoreButton="False">
    <Grid>
        <Label Content="角色名称" HorizontalAlignment="Left" Margin="44,37,0,0" VerticalAlignment="Top" Width="77"/>
        <TextBox TextWrapping="Wrap" Grid.Row="0" Margin="126,37,43,172"  Text="{Binding Model.RoleName}"
                                    />
        <RichTextBox Margin="126,85,43,83" Padding="5" IsDocumentEnabled="True">

        </RichTextBox>

        <Label Content="角色描述" HorizontalAlignment="Left" Margin="44,85,0,0" VerticalAlignment="Top" Width="77"/>
        <Button Content="确定" HorizontalAlignment="Left" Margin="285,202,0,0" Command="{Binding OKCommand }" VerticalAlignment="Top" Width="75"/>
        <Button Content="取消" HorizontalAlignment="Left" Margin="390,202,0,0"  Command="{Binding CancelCommand }" VerticalAlignment="Top" Width="75"/>
    </Grid>
</controls:MetroWindow>
