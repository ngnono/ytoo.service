<UserControl x:Class="OPCApp.Order.Views.OrderSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls"

             xmlns:local="clr-namespace:OPCApp.Order.Views"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="700">
    <Grid Background="#FFE5E5E5">

        <Custom:MetroAnimatedTabControl Margin="0">
            <TabItem Header="订单信息" Custom:ControlsHelper.HeaderFontSize="18">
                <local:OrderInfoSearch />
            </TabItem>
            <TabItem Header="订单商品信息" Custom:ControlsHelper.HeaderFontSize="18">
                <local:OrderGoodsInfoView />
            </TabItem>


            <TabItem Header="退货调配信息" Custom:ControlsHelper.HeaderFontSize="18">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
            <TabItem Header="发货信息" Custom:ControlsHelper.HeaderFontSize="18">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
            <TabItem Header="退货信息" Custom:ControlsHelper.HeaderFontSize="18">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
        </Custom:MetroAnimatedTabControl>

    </Grid>
</UserControl>