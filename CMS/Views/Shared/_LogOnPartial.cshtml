@if(Request.IsAuthenticated) {
        var selfController = (Yintai.Hangzhou.Cms.WebSiteV1.Controllers.UserController)ViewContext.Controller;
    <span class="btn-group">
        <a class="btn btn-primary " href="#"><i class="icon-user icon-white"></i>@selfController.CurrentUser.LoginName</a>
        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("修改密码", "ChangePassword", "Customer")</li>
            <li>@Html.ActionLink2("注销", "LogOff", "Account")</li>
        </ul>
    </span>
}
else {
    @:[ @Html.ActionLink2("登陆", "Login", "Account",null,new {@class="btn btn-small"}) ]
}
