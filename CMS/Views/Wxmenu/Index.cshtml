@{
    Layout = null;
}
@section HeaderScripts {
    <script src="@Url.Content("~/Content/jstree/jstree.min.js")" type="text/javascript"></script>
}
@section HeaderStyles {
    <link href="@Url.Content("~/Content/jstree/themes/default/style.min.css")" rel="stylesheet" type="text/css" />
}
@section PageJsSection {
    <script>
        $(function () {
            $('#wx_menutree').jstree({
                "core": {
                    "animation": 0,
                    "check_callback": true,
                    "themes": { "stripes": true },
                    'data': {
                        'url': function (node) {
                            return "@(Url.Action("ajax_all"))";
                        },
                        'data': function (node) {
                            return { 'id': node.id };
                        }
                    }
                },
                "types": {
                    "#": {
                        "max_children": 3,
                        "max_depth": 3,
                        "valid_children": ["root"]
                    },
                    "root": {
                        "icon": "/static/3.0.0-beta10/assets/images/tree_icon.png",
                        "valid_children": ["default"]
                    },
                    "default": {
                        "valid_children": ["default", "file"]
                    },
                    "file": {
                        "icon": "glyphicon glyphicon-file",
                        "valid_children": []
                    }
                },
               
                "plugins": [
                  "contextmenu",  "types"
                ]
            })
        });
        function new_root_item()
        {
            
        }
    </script>
}

<div>
    <div class="row">
        <div class="span3" >
            <div class="span3">
                <button class="btn btn-success" onclick="new_root_item">增加一级菜单</button>
            </div>
            <div class="span3" id="wx_menutree"></div>
        </div>
        <div class="span3">
        </div>
    </div>
</div>
