@model IEnumerable<Yintai.Hangzhou.Data.Models.ProductPublishResult>

@using Yintai.Hangzhou.Cms.WebSiteV1.Util
@if( Model.Count() >0) {
    <tr>
        <th>
            商品编码
        </th>
        <th>验证状态</th>
        <th>验证结果</th>
    </tr>

    foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemCode)
        </td>
         <td>
            <p>@item.Status.ToFriendlyString()</p> 
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.PublishMemo)
        </td>
       
    </tr>
    }
    <tr><td colspan="3">@Html.ActionLink2("查看发布商品", "List", "Product", new {sort = (int)Yintai.Hangzhou.Model.Enums.ProductSortOrder.CreatedDateDesc }, new { @class = "btn btnprimary" })
     @Html.ActionLink2("继续发布","Display",null,new{ @class="btn btnprimary"})</td>
        </tr>
} else {
    <tr> <td>
        <h4>没有商品发布成功！</h4>
         </td>
    </tr>
}

