@model Yintai.Hangzhou.Data.Models.ProductUploadInfo

@{
    ViewBag.Title = "详情";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@section PageBread
{
    <ul class="breadcrumb">
        <li>@Html.ActionLink2("批量导入", "Display", "ProBulkUpload", new {id=Model.GroupId },null)<span class="divider">/</span></li>
        <li class="active">商品详情</li>
    </ul>
}
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="span12">       
             <legend>@ViewBag.Title</legend>

        </div>
        <div class="span4">
            @Html.LabelFor(model => model.ItemCode)
            @Html.EditorFor(model => model.ItemCode)
            @Html.ValidationMessageFor(model => model.ItemCode)
        </div>

        <div class="span4">
            @Html.LabelFor(model => model.Title)
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="span4">
            @Html.LabelFor(model => model.Descrip)
            @Html.TextAreaFor(model => model.Descrip)
            @Html.ValidationMessageFor(model => model.Descrip)
        </div>

        <div class="span4">
            @Html.LabelFor(model => model.DescripOfPromotion)
            @Html.TextAreaFor(model => model.DescripOfPromotion)
        </div>

        <div class="span4">
            @Html.LabelFor(model => model.DescripOfPromotionBeginDate)
            @Html.EditorFor(model => model.DescripOfPromotionBeginDate)
            @Html.ValidationMessageFor(model => model.DescripOfPromotionBeginDate)
        </div>

        <div class="span4">
            @Html.LabelFor(model => model.DescripOfPromotionEndDate)
            @Html.EditorFor(model => model.DescripOfPromotionEndDate)
            @Html.ValidationMessageFor(model => model.DescripOfPromotionEndDate)
        </div>

        <div class="span4">
            @Html.LabelFor(model => model.Brand)
            @Html.EditorFor(model => model.Brand)
            @Html.ValidationMessageFor(model => model.Brand)
        </div>

        <div class="span4">
            @Html.LabelFor(model => model.Tag)
            @Html.EditorFor(model => model.Tag)
            @Html.ValidationMessageFor(model => model.Tag)
        </div>

        <div class="span4">
            @Html.LabelFor(model => model.Price)
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="span4">
            @Html.LabelFor(model => model.Store)
            @Html.EditorFor(model => model.Store)
            @Html.ValidationMessageFor(model => model.Store)
        </div>

        <div class="span4">
            @Html.LabelFor(model => model.PromotionIds)
            @Html.EditorFor(model => model.PromotionIds)
            @Html.ValidationMessageFor(model => model.PromotionIds)
        </div>

        <div class="span4">
            @Html.LabelFor(model => model.SubjectIds)
            @Html.EditorFor(model => model.SubjectIds)
            @Html.ValidationMessageFor(model => model.SubjectIds)
        </div>

        <div class="span4">
            @Html.HiddenFor(model => model.GroupId)
        </div>
         <div class="row">
            @Html.HiddenFor(model => model.Id)
        </div>

       

    </fieldset>
     <div class="span8 form-action">
            <button class="btn btn-success">保存</button>
            @Html.ActionLink2("删除","DeleteItem","ProBulkUpload",new {id=Model.Id,groupId=Model.GroupId},new {@class="btn btn-danger"})
            @Html.ActionLink2("返回", "Display", "ProBulkUpload", new {id=Model.GroupId },new {@class="btn btn-primary"})
     </div>
}

