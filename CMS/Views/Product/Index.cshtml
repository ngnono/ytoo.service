@{
    ViewBag.Title = "商品管理";
    var controller = (Yintai.Hangzhou.Cms.WebSiteV1.Controllers.UserController)ViewContext.Controller;
}

<div class="span2">
    <h2>新建商品</h2>
    <p>创建单个商品.</p>
    <p>@Html.ActionLink2("创建","Create",null,new {@class = "btn"})</p>
</div>
<div class="span2">
    <h2>批量上传</h2>
    <p>批量导入商品信息。 </p>
    <p>@Html.ActionLink2("上传","Display","ProBulkUpload",null,new {@class = "btn"})
        @Html.ActionLink2("历史","List","ProBulkUpload",null,new {@class = "btn"})
    </p>
</div>
<div class="span2">
    <h2>商品维护</h2>
    <p>维护商品信息。 </p>
    <p>@Html.ActionLink2("维护","List",null,new {@class = "btn"})</p>
</div>
<div class="span2">
    <h2>商品排序</h2>
    <p>批量设置商品的排序。 </p>
    <p>@Html.ActionLink2("设置排序","SortOrder",null,new {@class = "btn"})</p>
</div>
<div class="span3">
    <h2>商品属性管理</h2>
    <p>维护商品的属性信息.</p>
    <p>@Html.ActionLink2("进入","List","ProductPropertyValue",null,new {@class = "btn"})</p>
</div>
<div class="span2">
    <h2>关键词维护</h2>
    <p>维护搜索关键词。 </p>
    <p>@Html.ActionLink2("进入","List","Hotword",null,new {@class = "btn"})</p>
</div>
<div class="span3">
    <h2>用户评论维护</h2>
    <p>维护用户评论信息。 </p>
    <p>@Html.ActionLink2("进入","List","Comment",null,new {@class = "btn"})</p>
</div>
<div class="span3">
    <h2>我的私信维护</h2>
    <p>我的私信信息。 </p>
    <p>@Html.ActionLink2("进入","List","PMessage",null,new {@class = "btn"})</p>
</div>
<div class="span3">
    <h2>扫码二维码生成</h2>
    <p>生成商品的二维码。 </p>
    <p>@Html.ActionLink2("进入","Create","BarCode",null,new {@class = "btn"})</p>
</div>