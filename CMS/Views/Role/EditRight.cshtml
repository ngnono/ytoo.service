@model Yintai.Hangzhou.Data.Models.AdminAccessRightEntity

@{
    ViewBag.Title = "编辑权限";
   
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.Partial("_UpdateResultPartial")
    <fieldset>
        <div class="span12">       
             <legend>@ViewBag.Title</legend>
        </div>

        <div class="span4">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="span4">
            @Html.LabelFor(model => model.ControllName)
            @Html.EditorFor(model => model.ControllName)
            @Html.ValidationMessageFor(model => model.ControllName)
        </div>
              <div class="span4">
            @Html.LabelFor(model => model.ActionName)
            @Html.EditorFor(model => model.ActionName)
            @Html.ValidationMessageFor(model => model.ActionName)
        </div>

        <div class="span4">
            @Html.LabelFor(model => model.Description)
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        
    </fieldset>
     <div class="span12 form-action">
            @Html.HiddenFor(model=> model.Id)
            <button class="btn btn-success">保存</button>
            @Html.ActionLink2("返回", "RightList",null,new {@class="btn btn-primary"})
     </div>
}
