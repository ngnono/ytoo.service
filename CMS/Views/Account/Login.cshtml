@model  Yintai.Hangzhou.Cms.WebSiteV1.Models.LoginViewModel
@{
    ViewBag.Title = "登陆";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<section id="loginForm">
@using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)

        <div class="control-group">
                @Html.TextBoxFor(m => m.UserName, new { placeholder="登陆名"})
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        <div class="control-group">
                @Html.PasswordFor(m => m.Password, new { placeholder="密码"})
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        <div class="control-group">
        <input type="submit" value="登陆" class="btn btn-primary" />
    
        </div>
}
</section>



@section HeaderScripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

}

