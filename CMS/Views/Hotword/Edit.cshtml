@model Yintai.Hangzhou.Cms.WebSiteV1.Models.HotwordViewModel
@{
    ViewBag.Title = "修改关键词";
}
@section PageBread
{
    <ul class="breadcrumb">
        <li>@Html.ActionLink2("商品管理", "Index", "Product")<span class="divider">/</span></li>
        <li>@Html.ActionLink2("关键词列表", "List")<span class="divider">/</span></li>
        <li class="active">@ViewBag.Title</li>
    </ul>
}

@section PageJsSection {
    <script>
        $(function () {
            $("#Type").change(function () {
                initTypeChoice();
            });
            initTypeChoice();
        });

        function initTypeChoice() {
            var type = $("#Type").val();
            var wordinput = $("#lbl_word");
            var storeinput = $("#lbl_store");
            var brandinput = $("#lbl_brand");
            wordinput.hide();
            storeinput.hide();
            brandinput.hide();
            if (type == 1) {
                wordinput.show();
            } else if (type == 2) {
                brandinput.show();
            } else if (type == 3) {
                storeinput.show();
            }
        }
    </script>
}
<h2>@ViewBag.Title</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "Hotword", FormMethod.Post))
{ 
    @Html.ValidationSummary(true)
    <div class="editor-label">
        @Html.LabelFor(model => model.Type)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.Type, EnumHelper.DisplayList<Yintai.Hangzhou.Model.Enums.HotWordType>())
        @Html.ValidationMessageFor(model => model.Type)
    </div>
    <div id="lbl_word">
        <div class="editor-label">
            @Html.LabelFor(model => model.Word)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Word)
            @Html.ValidationMessageFor(model => model.Word)
        </div>
    </div>
    <div id="lbl_brand">
        <div class="editor-label">
            @Html.LabelFor(model => model.BrandId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BrandId)
            @Html.ValidationMessageFor(model => model.BrandId)
        </div>
    </div>
    <div id="lbl_store">
        <div class="editor-label">
            @Html.LabelFor(model => model.StoreId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StoreId)
            @Html.ValidationMessageFor(model => model.StoreId)
        </div>
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.SortOrder)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.SortOrder)
        @Html.ValidationMessageFor(model => model.SortOrder)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Status)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.Status, EnumHelper.DisplayList<Yintai.Hangzhou.Model.Enums.DataStatus>())
        @Html.ValidationMessageFor(model => model.Status)
    </div>
    <p>
        <input type="submit" value="保存" class="btn btn-primary" />
        @Html.ActionLink2("返回列表", "List", null, new { @class = "btn" })

    </p>
}
